
{
  "manifest_version": 3,
  "name": "EmployEvolution Extension",
  "version": "1.0.0",
  "description": "Access EmployEvolution features directly from your browser",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.indeed.com/jobs*",
        "https://*.glassdoor.com/Job/*"
      ],
      "js": ["src/extension/content.js"]
    }
  ]
}
