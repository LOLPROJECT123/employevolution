
{
  "manifest_version": 3,
  "name": "Streamline Extension",
  "version": "1.0.0",
  "description": "Streamline your job applications with auto-fill, cover letter generation, and application tracking",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "notifications",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.myworkdayjobs.com/*",
    "https://*.taleo.net/*",
    "https://*.icims.com/*",
    "https://*.brassring.com/*",
    "https://*.smartrecruiters.com/*",
    "https://*.jobvite.com/*",
    "https://wellfound.com/*",
    "https://*.dice.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.monster.com/*",
    "https://*.careerbuilder.com/*",
    "https://*.levels.fyi/*",
    "https://www.simplify.jobs/*",
    "https://*.jobright.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.indeed.com/jobs*",
        "https://*.indeed.com/viewjob*",
        "https://*.indeed.com/apply*",
        "https://*.glassdoor.com/Job/*",
        "https://*.glassdoor.com/job/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.taleo.net/*",
        "https://*.icims.com/*",
        "https://*.brassring.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.jobvite.com/*",
        "https://wellfound.com/jobs/*",
        "https://*.dice.com/jobs*",
        "https://*.ziprecruiter.com/jobs/*",
        "https://*.monster.com/jobs/*",
        "https://*.careerbuilder.com/job/*",
        "https://*.levels.fyi/jobs/*",
        "https://www.simplify.jobs/p/*",
        "https://*.jobright.ai/job/*"
      ],
      "js": ["src/extension/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/extension/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["favicon.ico"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  }
}
